<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/cus_name_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="姓名"
            android:textColor="@color/black_qian"
            android:textSize="19sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="1dp" >

            <ImageView
                android:id="@+id/img_arrow_up"
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/gray_arrow_up" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/img_arrow_up"
                android:scaleType="fitCenter"
                android:src="@drawable/blue_arrow_down" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textColor="@color/black_qian"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cus_date_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/customer_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="日期"
            android:textSize="18sp" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="1dp" >

            <ImageView
                android:id="@+id/img_arrow_up1"
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/gray_arrow_up" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/img_arrow_up1"
                android:scaleType="fitCenter"
                android:src="@drawable/gray_arrow_down" />
        </RelativeLayout>
        
    </LinearLayout>

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp" />

</LinearLayout>