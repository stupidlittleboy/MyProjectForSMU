<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_task_detail_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户编号"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_task_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="姓名"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_task_detail_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="性别"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_task_detail_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="联系方式"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_task_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="看房日期"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_task_detail_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="看房时间段"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_task_detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="看房地址"
            android:background="@drawable/listview_bg"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_task_detail_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="交易是否完成"
            android:visibility="gone"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_task_detail_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_cancel_click"
            android:gravity="center"
            android:text="取消任务"
            android:textSize="19sp" />

        <Button
            android:id="@+id/btn_task_detail_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_click"
            android:gravity="center"
            android:text="领取任务"
            android:textSize="19sp" />
    </LinearLayout>

</ScrollView>