<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_customer_detail_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户编号："
            android:textSize="25sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="客户需求："
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_customer_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="客户名称："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="客户性别："
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_customer_detail_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/listview_bg"
            android:text="联系方式："
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_customer_detail_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/listview_bg"
            android:text="电子邮件："
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_customer_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="预约日期："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="预约时间："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="所在城市："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/listview_bg"
            android:text="看房地址："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="房子类型："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="房子面积："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="房子价格："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_green_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="绿化面积："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="所属物业："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="房东姓名："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_owner_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/listview_bg"
            android:text="房东电话："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_is_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/listview_bg"
            android:text="是否空闲："
            android:textSize="22sp" />
        
        <TextView
            android:id="@+id/tv_customer_detail_is_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/listview_bg"
            android:text="是否完成："
            android:textSize="22sp" />

       <!--  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户等级："
                android:textSize="22sp" />

            <RatingBar
                android:id="@+id/rb_customer_datail_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5" 
                style="?android:attr/ratingBarStyleIndicator"/>
        </LinearLayout> -->
    </LinearLayout>

</ScrollView>